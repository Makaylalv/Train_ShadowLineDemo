<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/set_edit"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="52dp">
        <TextView
            android:id="@+id/edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:text="取消"/>
        <TextView
            android:id="@+id/edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:textColor="@color/purple_500"
            android:text="保存"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/set_edit"
        android:id="@+id/previously_layout"
        style="@style/personal_rv">
        <TextView
            android:id="@+id/previously_pwd_tv"
            style="@style/personal_tv"
            android:text="原始密码"/>

        <EditText
            android:id="@+id/previously_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/previously_pwd_tv"
            android:background="@null"
            android:hint="yingxing" />
        <ImageView

            android:layout_toRightOf="@id/previously_pwd_tv"
            style="@style/personal_img"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/previously_layout"
        android:id="@+id/new_pwd_layout"
        style="@style/personal_rv">
        <TextView
            android:id="@+id/new_pwd_layout_tv"
            style="@style/personal_tv"
            android:text="新密码"/>
        <ImageView
        android:layout_toRightOf="@id/new_pwd_layout_tv"
        style="@style/personal_img"/>
        <EditText
            android:id="@+id/new_pwd"
            android:hint="yingxing"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_toRightOf="@id/new_pwd_layout_tv" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/new_pwd_layout"
        android:id="@+id/confirm_new_pwd_layout"
        style="@style/personal_rv">
        <TextView
            android:id="@+id/confirm_new_pwd_layout_tv"
            style="@style/personal_tv"
            android:text="确认新密码"/>
        <ImageView
            android:layout_toRightOf="@id/confirm_new_pwd_layout_tv"
            style="@style/personal_img"/>
        <EditText
            android:id="@+id/confirm_new_pwd"
            android:hint="yingxing"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_toRightOf="@id/confirm_new_pwd_layout_tv" />
    </RelativeLayout>
</RelativeLayout>