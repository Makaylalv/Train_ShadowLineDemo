<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp">
    <CheckBox
        android:id="@+id/movie_op"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/movie"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:id="@+id/movie_img"
            android:layout_marginRight="10dp"
            android:src="@drawable/movie1"/>
        <TextView
            android:id="@+id/movie_name"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="少年的你"
            android:layout_toRightOf="@id/movie_img"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="210dp"
            android:layout_height="41dp"
            android:text="BettsrsDays"
            android:textSize="15sp"
            android:id="@+id/movie_english"
            android:layout_toRightOf="@id/movie_img"
            android:layout_below="@id/movie_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/movie_type"
            android:layout_toRightOf="@id/movie_img"
            android:layout_below="@id/movie_english"
            android:text="2019/爱情/犯罪/剧情"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/movie_city"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/movie_img"
            android:text="重庆市"
            android:layout_marginTop="7dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="片场"
            android:id="@+id/movie_cut"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_cut"
            android:id="@+id/movie_cutnum"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:text="29"/>

    </RelativeLayout>

</RelativeLayout>